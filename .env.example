# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/saas-starter"

# Authentication (Clerk)
# Development (Test Mode)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Production (Live Mode) - Uncomment when deploying to production
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_live_..."
# CLERK_SECRET_KEY="sk_live_..."

# Email (Resend)
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@getcracked.lol"

# Codebase Download Security
CODEBASE_DOWNLOAD_SECRET="your-secret-key-here"

# Stripe (Test Mode)
STRIPE_API_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe (Live Mode - uncomment when going live)
# STRIPE_API_KEY="sk_live_..."  # Use RESTRICTED API key for better security
# STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (these will be generated after creating products)
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PLAN_ID="price_..."
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PLAN_ID="price_..."
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PLAN_ID="price_..."
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PLAN_ID="price_..."

# Application Configuration
# Development
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Production - Update this to your production domain
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"
NEXT_PUBLIC_APP_URL="https://getcracked.lol"

# AI Configuration
OPENROUTER_API_KEY="sk-or-v1-..."
OPENROUTER_MODEL="x-ai/grok-4-fast:free"
OPENROUTER_SITE_URL="https://getcracked.lol"
OPENROUTER_APP_NAME="Next.js AI App"

# Alternative providers (optional)
OPENAI_API_KEY="sk-..."
ANTHROPIC_API_KEY="sk-ant-..."

# Production Deployment Notes:
# 1. Replace pk_test_ and sk_test_ with pk_live_ and sk_live_ for production
# 2. Update NEXT_PUBLIC_APP_URL to your production domain
# 3. Configure OAuth credentials in Clerk Dashboard for production
# 4. Update webhook endpoints to use production URLs
# 5. Add DNS records in Clerk Dashboard for your custom domain
